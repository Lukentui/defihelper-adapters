{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "useTabs": false,
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf"
      }
    },
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "explicitTypes": "always",
        "tabWidth": 2
      }
    }
  ]
}
